{
  "name": "business-app",
  "version": "1.0.0",
  "description": "Business App - Billing, Accounting & GST Management",
  "private": true,
  "scripts": {
    "dev": "nx serve payment-service",
    "dev:business": "nx serve business-service",
    "dev:auth": "nx serve auth-service",
    "dev:party": "nx serve party-service",
    "dev:inventory": "nx serve inventory-service",
    "dev:invoice": "nx serve invoice-service",
    "dev:payment": "nx serve payment-service",
    "dev:all": "nx run-many --target=serve --all --parallel=3",
    "build": "nx build business-service",
    "build:all": "nx run-many --target=build --all",
    "test": "nx test business-service",
    "test:all": "npx nx run-many --target=test --all",
    "test:watch": "nx test business-service --watch",
    "test:cov": "nx test business-service --coverage",
    "test:integration": "jest --config=jest.integration.config.ts",
    "test:integration:watch": "jest --config=jest.integration.config.ts --watch",
    "test:integration:cov": "jest --config=jest.integration.config.ts --coverage",
    "test:e2e": "jest --config=jest.e2e.config.ts",
    "test:e2e:watch": "jest --config=jest.e2e.config.ts --watch",
    "test:setup": "./scripts/test-setup.sh",
    "test:cleanup": "./scripts/test-cleanup.sh",
    "test:run-all": "./scripts/run-all-tests.sh",
    "audit:check": "npm audit",
    "audit:fix": "npm audit fix",
    "lint": "nx lint business-service",
    "lint:all": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "nx run business-service:typeorm migration:run",
    "db:seed": "ts-node apps/business-service/src/scripts/seed.ts",
    "db:reset": "ts-node apps/business-service/src/scripts/reset.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@nx/jest": "^22.3.3",
    "@nx/nest": "^22.3.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "@jest/test-sequencer": "^29.7.0",
    "jest": "^29.7.0",
    "nx": "^22.3.3",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
