{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "business-service",
        "auth-service",
        "inventory-service",
        "invoice-service",
        "accounting-service",
        "gst-service",
        "payment-service",
        "notification-service",
        "sync-service",
        "shared",
        "infra",
        "deps"
      ]
    ]
  }
}

